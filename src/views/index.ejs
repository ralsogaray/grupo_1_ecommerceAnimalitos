<%- include('partials/metadata.ejs') %> 

<%- include('partials/header.ejs') %> 

    <main>
        <section>
            <img id="imagen-carrousel" src="https://mla-s2-p.mlstatic.com/D_NQ_NP_822524-MLA48572343295_122021-OO.jpg"
                alt="imagen de perro con servicios">
        </section>

        <section id="home-medios-de-pago">
            <article id="article-medios-pago-paraBorde">
                <a href="#">
                    <i class="fa-regular fa-credit-card"></i>
                    <p>Promociones Bancarias</p>
                </a>
            </article>
            <article id="article-medios-pago-paraBorde">
                <a href="#">
                    <i class="fa-regular fa-credit-card"></i>
                    <p>Tarjeta de Débito</p>
                </a>
            </article>
            <article id="article-medios-pago-paraBorde">
                <a href="#">
                    <i class="fa-sharp fa-solid fa-money-bill"></i>
                    <p>Efectivo</p>
                </a>

            </article>
            <article>
                <a href="#">
                    <i class="fa-solid fa-plus"></i>
                    <p>Más medios de pago</p>
                </a>
            </article>
        </section>
        <br>

        <section id="section-productos-destacados">
            <h2>Productos Destacados</h2>
            <button class="boton-filtrar-productos">Filtrar</button>

            <div class="cards-productos">

                <% catFood.forEach(catfood => {%>
                    <article>
                        <div>
                            <img class="imagen-producto-destacado" src="/images/<%= catfood.image %>"
                                alt="<%= catfood.description%>">
                        </div>
                        <div class="cards-productos-informacion">
                            <p class="cards-precio-producto"><%= catfood.price%></p>
                            <p class="cards-descripcion-producto"><%= catfood.name %></p>
                        </div>
                        <div id="cards-boton-agregarAlCarrito">
                            <p>Agregar</p>
                        </div>
                    </article>
                <% }) %>
            </div>
        </section>

        <section id="section-productos-destacados">
            <h2>Accesorios Destacados</h2>
            <button class="boton-filtrar-productos">Filtrar</button>

            <div class="cards-productos">
                <% dogFood.forEach(dogfood => {%>
                    <article>
                        <div>
                            <img class="imagen-producto-destacado" src="/images/<%= dogfood.image %>"
                                alt="<%= dogfood.description%>">
                        </div>
                        <div class="cards-productos-informacion">
                            <p class="cards-precio-producto"><%= dogfood.price%></p>
                            <p class="cards-descripcion-producto"><%= dogfood.name %></p>
                        </div>
                        <div id="cards-boton-agregarAlCarrito">
                            <p>Agregar</p>
                        </div>
                    </article>
                <% }) %>  
            </div>
        </section>

        <br>

        <section class="quienes-somos-main">
            <article>
                <h4>¿Quienes somos?</h4>

                <div id="quienes-somos-contenedor">
                    <div id="quienes-somos-div-logo-empresa">
                        <img src="/images/logo-sin-bg.png" alt="logo empresa">
                    </div>
                    <div>
                        <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Nemo accusantium ad quis dolorum
                            soluta, iste quibusdam! Tempore officia quibusdam nemo incidunt quaerat. Veritatis impedit
                            et voluptate mollitia, cumque molestiae ad.</p>
                    </div>
                </div>

            </article>

        </section>
    </main>

