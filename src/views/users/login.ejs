<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        <%- include('../partials/header.ejs') %>
        <main>
            <form method="post" action="/login" class="formRegistro">
                <div class="text-field">
                    <div><h3 class="center">Ingresá a tu Cuenta</h3></div>
                    <% if(locals.errors && errors.email){ %>
                        <div style="color: red;">
                            <%= errors.email.msg %>
                        </div>
                    <% } %>
                    <input type="text" 
                    name="email" 
                    class="form-control <%= locals.errors && errors.email ? 'is-invalid' : null  %>"
                    value="<%= locals.oldData ? oldData.email : null %>">
                    <span></span>
                    <label>Correo Electrónico</label>
                    
                </div>

                

                

                <div class="text-field">
                    
                    <input 
                    type="password" 
                    name="password" 
                    class="form-control <%= locals.errors && errors.password ? 'is-invalid' : null  %>" 
                    value="<%= locals.oldData ? oldData.password : null %>">
                    <span></span>
                    <label>Contraseña</label>
                </div>
                <% if(locals.errors && errors.password){ %>
                    <div style="color: red;"></div>
                        <p style="color: red;"><%= errors.password.msg %></p>
                    </div>
                    <br>
                <% } %>
                

                <div >
                    <input type="checkbox" name="recordame" id="loginRecordame">
                    <label for="loginRecordame">Recordame</label>
                
                    <br>
                    <br>
                    <br>
                </div>

                <div class="forget-pass-field">¿Olvidaste tu contraseña?</div>
                
                <button class="buttonContainer" type="submit">lngresá</button>
               
                <div class="signup-link">
                ¿No sos miembro? <a href="/register">¡Registrate!</a>
                </div>
                </form>

        </main>
        <%- include('../partials/footer.ejs') %>
    </body>
</html>
